{
  "manifest_version": 2,

  "name": "Splash Coffee",
  "description": "Enjoy unsplash pictures when you take a break",
  "version": "1.1.0",
  "icons": { "16": "assets/splashCoffe.png",
           "48": "assets/splashCoffe.png",
          "128": "assets/splashCoffe.png" },

  "browser_action": {
    "default_icon": "assets/splashCoffe.png",
    "default_popup": "view/popup.html",
    "default_title": "SplashCoffee"
  },
  "options_page": "view/options.html",
  "background": {
    "scripts": ["js/popup.js"]
  },
  
  "chrome_url_overrides": {
    "newtab": "view/tab.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}